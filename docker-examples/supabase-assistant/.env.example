# Supabase Assistant Environment Configuration
# Copy this file to .env and fill in your credentials

# ===========================================
# REQUIRED: Claude Max Authentication
# ===========================================
# Your Claude Max subscription auth token
# Get this from your Claude Code session
ANTHROPIC_AUTH_TOKEN=

# ===========================================
# OPTIONAL: Git/GitHub Credentials
# ===========================================
# Only needed if you want to create PRs or work with repos
# SSH private key for git clone operations (base64 encoded or raw)
SSH_PRIVATE_KEY=

# GitHub personal access token for gh CLI
GH_TOKEN=

# ===========================================
# OPTIONAL: Worker Configuration
# ===========================================
# Number of parallel workers (default: 1)
WORKER_COUNT=1

# Queue polling interval in ms (default: 5000)
POLL_INTERVAL_MS=5000

# mclaude execution timeout in ms (default: 30 minutes)
MCLAUDE_TIMEOUT_MS=1800000

# Clean up workspace after completion (default: true)
CLEANUP_AFTER_COMPLETE=true

# ===========================================
# NOTE: Supabase credentials are passed per-request
# ===========================================
# Supabase credentials (URL, anon key, service key, etc.) should be
# passed in the `metadata` field of each orchestration_requests row.
# They will be automatically injected as environment variables.
#
# Example request:
# INSERT INTO orchestration_requests (prompt, metadata) VALUES (
#   'List all tables in my Supabase database',
#   '{
#     "supabaseUrl": "https://xxx.supabase.co",
#     "supabaseAnonKey": "eyJ...",
#     "supabaseServiceKey": "eyJ..."
#   }'
# );
#
# These become environment variables:
#   SUPABASE_URL=https://xxx.supabase.co
#   SUPABASE_ANON_KEY=eyJ...
#   SUPABASE_SERVICE_KEY=eyJ...
